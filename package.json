{
  "name": "contact-form-api",
  "version": "1.0.0",
  "description": "Production-ready contact form API using Azure Functions, TypeScript, and Nodemailer with ProtonMail SMTP",
  "main": "dist/src/functions/contact-form/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "dev": "npm run build && func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prestart": "npm run build",
    "start": "func start"
  },
  "dependencies": {
    "@azure/functions": "^4.5.1",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/identity": "^4.2.1",
    "nodemailer": "^6.9.14",
    "joi": "^17.13.3",
    "dompurify": "^3.1.6",
    "jsdom": "^24.1.1",
    "ratelimiter": "^3.4.1"
  },
  "devDependencies": {
    "@azure/functions-core-tools": "^4.0.5611",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.15",
    "@types/nodemailer": "^6.4.15",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "azure-functions",
    "contact-form",
    "typescript",
    "nodemailer",
    "serverless"
  ],
  "author": "Your Name",
  "license": "MIT"
}